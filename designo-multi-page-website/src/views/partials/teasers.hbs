<section class="section-teasers mb-30 mb-lg-40">
  <div class="container px-sm-0 grid-teasers--service">
    {{#each teasers}}
    <div class="teaser">
      <picture class="teaser__picture">
        <source
          srcset="@images/home/desktop/image-{{#if this.imageDesktop }}{{ this.imageDesktop }}{{else}}{{ this.slug }}{{/if}}-desktop.jpg?as=avif"
          type="image/avif"
          media="(min-width: 1200px)"
        />
        <source
          srcset="@images/home/desktop/image-{{#if this.imageDesktop }}{{ this.imageDesktop }}{{else}}{{ this.slug }}{{/if}}-desktop.jpg?as=webp"
          type="image/webp"
          media="(min-width: 1200px)"
        />
        <source
          srcset="@images/home/tablet/image-{{ this.slug }}-tablet.jpg?as=avif"
          type="image/avif"
          media="(min-width: 768px)"
        />
        <source
          srcset="@images/home/tablet/image-{{ this.slug }}-tablet.jpg?as=webp"
          type="image/webp"
          media="(min-width: 768px)"
        />
        <img
          class="teaser__background"
          src="@images/home/mobile/image-{{ this.slug }}.jpg?as=webp"
          width="690"
          height="200"
          alt=""
        />
      </picture>
      <div class="teaser__wrapper">
        <h2 class="teaser__heading">{{ this.title }}</h2>
        <a class="teaser__link" href="/{{ this.slug }}">
          view Projects
          <svg width="7" height="8" class="teaser__icon-arrow" aria-hidden="true">
            <use href="@images/sprite.svg#chevron-right" />
          </svg>
        </a>
      </div>
    </div>
    {{/each}}
  </div>
</section>
